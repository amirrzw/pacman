<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="800.0" prefWidth="1000.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="view.game.GameController">

    <stylesheets>
        <URL value="@chooseMap.css" />
    </stylesheets>
   <children>
      <GridPane fx:id="gridPane" layoutX="170.0" layoutY="50.0" prefHeight="660" prefWidth="660">
      </GridPane>
      <VBox layoutX="28.0" layoutY="201.0" prefHeight="140.0" prefWidth="122.0">
         <children>
            <Label alignment="CENTER" prefHeight="65.0" prefWidth="123.0" text="Score" />
            <Label fx:id="scoreLabel" alignment="CENTER" prefHeight="58.0" prefWidth="127.0" />
         </children>
      </VBox>
      <VBox layoutX="28.0" layoutY="414.0" prefHeight="140.0" prefWidth="122.0">
         <children>
            <Label alignment="CENTER" prefHeight="65.0" prefWidth="123.0" text="Health" />
            <Label fx:id="healthLabel" alignment="CENTER" prefHeight="58.0" prefWidth="127.0" />
         </children>
      </VBox>
      <Button layoutX="837.0" layoutY="279.0" mnemonicParsing="false" prefHeight="49.0" prefWidth="143.0" text="Pause" onMouseClicked="#pauseClicked" fx:id="pauseButton" />
      <Button layoutX="837.0" layoutY="390.0" mnemonicParsing="false" prefHeight="49.0" prefWidth="143.0" text="Exit" onMouseClicked="#exitClicked" fx:id="exitButton"/>
   </children>

</AnchorPane>
